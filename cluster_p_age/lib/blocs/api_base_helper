import 'dart:io';
import 'package:http/http.dart' as http;
import 'dart:convert';
import 'dart:async';



class ApiBaseHelper {
  final String _base = "https://6181639432c9e200178047d7.mockapi.io/";

  Future<dynamic> get(String term) async {
    String full_term = _base + term;
      final response = await http.get(Uri.parse(full_term));
    return response;
  }
}

